<!-- Footer Starts Here -->
<section class="site-footer bg-black text-primary py-60">
  <div class="container-home">
    {% if section.settings.show_newsletter %}
    <div class="row mob_view_hide">
      <div class="col-lg-6 d-lg-block">
        <div class="title-block footer-newsletter">
          {% if section.settings.heading != blank %}<h1 class="custom-top-spacing"> {{ section.settings.heading }}</h1>{%endif%}
          {% if section.settings.subheading != blank and section.settings.subheading-bold != blank %}
            <h2><span class="font-light font-italic">{{ section.settings.subheading }}</span> 
              {{ section.settings.subheading-bold }}
            </h2>
          {%endif%}
        </div>
      </div>
      <div class="col-lg-6 d-lg-block dm_footerBox">
        <div class="newsletter__block">
          <div class="newsletter__block__inner dsk">
       {% if section.settings.show_icon %}
            <span class="icon-wrap">
              <img src="https://cdn.shopify.com/s/files/1/0690/0531/files/icon-right--red.png?v=1654211857" alt="icon">
            </span>
            {% endif %}
           {% comment %}
            <div class="dp">
                {% if section.settings.small_label != blank %}<p class="copy-sm ssd">{{ section.settings.small_label }}</p>{%endif%}
                {% if section.settings.info != blank %}
                  <p class="copy-sm">
                   {{ section.settings.info }}
                  </p>
               {%endif%}
               {% if section.settings.reg_url != blank %}<a href="{{section.settings.reg_url}}" class="register_now btn-primary btn d-block pb-2 mb-1">{{ section.settings.reg_txt }}</a> {% endif %}
            </div>
           {% endcomment %}
            <div class="reg_text_mobOnly" style="display: none;">
            {% if section.settings.small_label != blank %}<p class="ss1">{{ section.settings.small_label }}</p>{%endif%}
            {% if section.settings.info != blank %}
                <p class="ss2">
                  {{ section.settings.info }}
                </p>
              {%endif%}
            </div>

            <div class="btn-wrap sign-up-footer-form-wrapper">{{ section.settings.form_code }}</div>
            
            <div class="btn-wrap" style="display: none;">
<!--               <a href="#" class="btn btn-primary">Sign up now!</a> -->
              {% form 'customer', class: 'contact-form newsletter-form--newsletter-section', id: nil %}
                {% if form.posted_successfully? %}
                  <p class="quote">{{ 'general.newsletter_form.success_text' | t }}</p>
                {% elsif form.errors %}
                  <div class="one-whole column contact-form__form-errors">
                    {% for field in form.errors %}
                      <p class="form__error">{{ field | capitalize }} - {{ form.errors.messages[field] }}</p>
                    {% endfor %}
                  </div>
                {% endif %}

                {% comment %} Hidden fields {% endcomment %}
                <input type="hidden" name="contact[tags]" value="prospect,newsletter"/>
                <input type="hidden" name="challenge" value="false" />

                <div class="newsletter-form form is-responsive" style="margin-right: 20px;">

                  {% comment %} Email {% endcomment %}
                  <div class="field is-stretched-width">
                    <div class="control {% if settings.show_form_icons %} has-icons-left has-icons-left--responsive-form{% endif %}">
                      <input class="input is-{{ field_input_style }} is-{{ field_input_size }}" type="email" name="contact[email]" placeholder="Email*" required
                             style="border: none;border-radius: 20px;"
                             >
                      {% if settings.show_form_icons %}
                        {% render 'icon', name: 'email' %}
                      {% endif %}
                    </div>
                  </div>

                  {% comment %} Submit button {% endcomment %}
                  <div class="field is-default-width is-align-self-end ">
                    <div class="control">
                      {%- assign button_label = section.settings.btn-txt  %}
                      {% render 'button',
                              label: button_label,
                              type: "submit",
                              style: settings.form_button_style,
                              class: 'btn btn-primary is-within-form'
                      %}
                    </div>
                  </div>
                </div>
            {% endform %}
            </div>      
          </div>           
        </div>
      </div>
      {% if section.settings.small_label != blank %}<p class="footer-signup-btm-txt">{{ section.settings.small_label }}</p>{%endif%}
    </div>
    {% endif %}
   
    {% if section.settings.info != blank %}
    <div class="text-wrapper d-lg-block w-50 px-3 pt-2 pb-60 mt-1 text-uppercase ml-auto reg_textdeskOnly mob_view_hide" style="display: none !important;">
      <p class="copy-sm">
        {{ section.settings.info }}
      </p>
    </div>
    {%endif%}
    
    <div class="row flex-column-reverse flex-lg-row">
      <div class="col-lg-6">
        {% if section.settings.show_info_block %}
        <div class="site-footer__info-block">
          <div class="site-footer__info-block__inner">
            
            <div class="logo-block">
              <a href="{{section.settings.icon_url}}" class="d-block pb-2 mb-1">
                {% if section.settings.icon_img1 != blank %}<img src="{{ section.settings.icon_img1 | img_url:'master' }}" alt="site logo">{% endif %}
              </a>
              {% if section.settings.icon_img2 != blank %}<img src="{{ section.settings.icon_img2 | img_url:'master' }}" alt="site logo">{% endif %}
            </div>
            {% if section.settings.show_copyright %}
            <div class="copyrights">
              <p class="copy-md">
                {{ section.settings.copyright }}
                <br>
                <br>
                {{ section.settings.copyright2 }}
              </p>
            </div>
            {% endif %}
            <div class="site_link_main">
              <div class="site-links">
                <div class="links-wrapper copy-md">
                  {% if section.settings.website_link2 != blank %}
                  	<a href="{{section.settings.website_link}}" class="d-block">
                        {% if section.settings.icon_img3 != blank %}
                          <img src="{{ section.settings.icon_img3 | img_url:'master' }}" alt="icon">
                        {% endif %}
                         <span> {{section.settings.website_link2}}</span>
                  	</a>
                  {% endif %}
                </div>
              </div>
              <div class="site-links">
                <div class="links-wrapper copy-md">
                  {% if section.settings.website_link4 != blank %}
                  	<a href="{{section.settings.website_link3}}" class="d-block" target="_blank">
                        {% if section.settings.icon_imginsta != blank %}
                           <img src="{{ section.settings.icon_imginsta | img_url:'master' }}" alt="icon">
                        {% endif %}
                        <span>{{section.settings.website_link4}}</span>
                    </a>
                  {% endif %}
                </div>
              </div>
          </div>
          </div>
        </div>
        {%endif%}
        {% if section.settings.show_payment %}
          <div class="payments-methods pt-lg-5 pt-4">
            <ul class="d-flex">
              {% for type in shop.enabled_payment_types %}
                {{ type | payment_type_svg_tag: class:'payment-icon' }}
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
      <div class="col-lg-6">
        <div class="site-footer__links">
          <div class="row sfftr">
            {%for block in section.blocks%}
              <div class="col-lg-4 col-6 site-footer__links__column sftrinr">
                <div class="site-footer__links__block">
                  <ul>

                    {% for link in linklists[block.settings.menu].links %}
                      <li><a href="{{link.url}}" class="d-block">{{link.title}}</a></li>
                    {%endfor%}

                  </ul>
                </div>
              </div>
            {%endfor%}
<!--             <div class="col-lg-4 col-6 site-footer__links__column">
              <div class="site-footer__links__block">
                <ul>
                  <li><a href="#" class="d-block">Wholesale Catalogs</a></li>
                  <li><a href="#" class="d-block">FAQs</a></li>
                  <li><a href="#" class="d-block">Frame Care  </a></li>
                  <li><a href="#" class="d-block">Recycle and Repair</a></li>
                </ul>
              </div>
            </div>
            
            <div class="col-lg-4 col-6 site-footer__links__column">
              <div class="site-footer__links__block">
                <ul>
                  <li><a href="#" class="d-block">Register</a></li>
                  <li><a href="#" class="d-block">Collaborators</a></li>
                  <li><a href="#" class="d-block">History </a></li>
                  <li><a href="#" class="d-block">Chronicle</a></li>
                </ul>
              </div>
            </div> -->
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
