{% assign collection = section.settings.collection %}

<section class="best-seller bg-beige slider-img">
  <div class="title-block hcs_titleMobonly">
            {% if section.settings.title_normal != blank and section.settings.title_bold != blank %}
            	<h1> <span class="font-italic font-light"> {{section.settings.title_normal}}</span> {{section.settings.title_bold}}</h1>
            {% endif %}
  </div>
  <div class="best-seller__carousel">
    {% for product in collection.products limit: section.settings.products_limit %}
    <div class="carousel-cell  ">
      <div class="row row-gutters-30">
        <div class="col-lg-6 carousel-cell__column">
          <div class="title-block hcs_titleDeskonly">
            {% if section.settings.title_normal != blank and section.settings.title_bold != blank %}
            	<h1> <span class="font-italic font-light"> {{section.settings.title_normal}}</span> {{section.settings.title_bold}}</h1>
            {% endif %}
          </div>
          
          
          <div class="secondary-title text-center d-lg-none">
        
            	<h1 class="text-primary text-uppercase pt-2">{{ product.title }}</h1>
        
            <h2><span class="font-light font-italic"> {{ product.metafields.descriptors.subtitle }}</span></h2>
          </div>
          
          <div class="best-seller__carousel--showcase">
            <div class="image-ratio image-ratio--square">
              <a href="{{product.url}}"><img src="{{ product.featured_image | img_url:'master' }}" alt=""></a>
            </div>
          </div>
        </div>
        <div class="col-lg-6 carousel-cell__column">
          
          <div class="title-block d-none d-lg-block">
           <h1 class="text-primary">{{ product.title }}</h1>
          </div>
          
          <div class="content-block">
            <h2 class="d-none d-lg-block"><span class="font-light font-italic">{{ product.metafields.descriptors.subtitle }}</span></h2>
            
            {% if product.metafields.descriptors.subtitle != blank%}<p style="display: none;">{{ product.metafields.descriptors.subtitle }}</p>{% endif %}
            {% comment %}
            <ul class="d-flex">
              <li>
                {% if section.settings.icon_1 %}<img src="{{ section.settings.icon_1 | img_url:'master' }}" alt="icon">{% endif %}
              </li>
              <li>
                {% if section.settings.icon_2 %}<img src="{{ section.settings.icon_2 | img_url:'master' }}" alt="icon">{% endif %}
              </li>
            </ul>
            {% endcomment %}
            <div class="text-wrapper">
              
              <p>{{ product.description | strip_html | truncate: 250 }}</p>
              
              
              <p class="copy-md">
                <a href="{{product.url}}" class="text-primary text-uppercase"> 
                  <span>SEE THE PRODUCT</span>
                  <span class="icon-wrap">
                    <svg version="1.0" xmlns="http://www.w3.org/2000/svg" width="512.000000pt"
                         height="512.000000pt" viewBox="0 0 512.000000 512.000000"
                         preserveAspectRatio="xMidYMid meet">

                      <g transform="translate(0.000000,512.000000) scale(0.100000,-0.100000)"
                         fill="#e51a22" stroke="none">
                        <path d="M1400 5098 c-44 -17 -77 -44 -171 -137 -144 -143 -163 -177 -164
                                 -286 0 -58 5 -91 19 -120 13 -27 333 -355 995 -1018 l976 -977 -977 -978
                                 c-760 -760 -982 -987 -997 -1022 -14 -30 -21 -67 -21 -110 0 -103 29 -153 168
                                 -291 98 -97 127 -119 175 -137 73 -28 131 -28 204 -1 56 20 108 71 1230 1193
                                 1297 1296 1223 1214 1223 1346 0 132 74 50 -1223 1346 -1123 1123 -1174 1173
                                 -1230 1193 -72 26 -136 26 -207 -1z"></path>
                      </g>
                    </svg>
                  </span>
                </a>
              </p>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</section>


{% schema %}
{
  "name": "Home Collection Slider",
    "settings": [
        {
          "label": "Collection",
          "id": "collection",
          "type": "collection"
        },
		{
          "label": "Products Limit",
          "id": "products_limit",
          "type": "range",
		  "min": 0,
		  "max": 50,
		  "step": 2,
		  "default": 2
        },
        {
          "type":"text",
          "id":"title_normal",
          "label":"Normal Title",
		  "default": "STAFF"
        },
        {
          "type":"text",
          "id":"title_bold",
          "label":"Bold Title",
		  "default": "PICKS"
        }
       
    ],
  "presets": [
    {
      "name": "Home Collection Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}