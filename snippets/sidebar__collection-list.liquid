{% if block.settings.title != blank %}
  <div data-has-toggle-option>
    <h3 class="sidebar-block__heading {{ block.settings.title | downcase }}-title" {% if settings.toggle_sidebar %}data-sidebar-block__toggle="closed" aria-label="toggle"{% endif %}>
      {{ block.settings.title }}
      {% if settings.toggle_sidebar %}
        <button class="sidebar-block__toggle-icon icon-style--{{ settings.toggle_icon_style }}">
          {% if settings.toggle_icon_style == 'plus_and_minus' %}
            {% render 'icon',
                    name: 'plus',
                    icon_class: 'icon--active'
            %}
            {% render 'icon', name: 'minus' %}
          {% else %}
            {% render 'icon',
                    name: 'down-caret',
                    icon_class: 'icon--active'
            %}
          {% endif %}
        </button>
      {% endif %}
    </h3>
  </div>
{% endif %}
<div class="sidebar-block__content" {% if settings.toggle_sidebar %}data-sidebar-block__content--collapsible{% endif %}>
  <ul class="sidebar-block__collection-list">
    <!-- <li class="all-pro"> <a href="/collections/all" title="ALL">ALL</a></li> -->
    <!-- <li class="ac-dc"> <a href="/pages/acdc" title="AC/DC">AC/DC</a></li> 
    <li class="miles-davis"> <a href="/pages/jazz" title="MILES DAVIS">MILES DAVIS</a></li>  -->
    {% comment %}
       {% for col in collections %}
        {% unless col.handle == 'frontpage' %}
          <li class="{{ col.title | handle }} {% if col.handle == collection.handle %}is-active{% endif %}">
            <a href="{{ col.url }}" title="{{ col.title | escape }}">
              {{ col.title }}
            </a>
          </li>
        {% endunless %}
      {% endfor %}
    {% endcomment %}
    {% for col in collections %}
      {% unless col.handle == 'frontpage' or col.title == 'Accessories' %}
        <li class="{{ col.title | handle }} {% if col.handle == collection.handle %}is-active{% endif %} vgvgvg">
          <a href="{{ col.url }}" title="{{ col.title | escape }}">
            {{ col.title }}
          </a>
        </li>
      {% endunless %}
    {% endfor %}

  </ul>
</div>
